<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_image_1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:actualImageScaleType="fitCenter"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_image_2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/list_image_1"
            app:actualImageScaleType="fitCenter"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_image_3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_below="@+id/list_image_1"
            app:actualImageScaleType="fitCenter"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_image_4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_below="@+id/list_image_2"
            android:layout_toEndOf="@+id/list_image_3"
            app:actualImageScaleType="fitCenter"/>

        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black70"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/list_image_2"/>

        <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_name"
            android:layout_toEndOf="@+id/list_image_2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black54"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_description"
            android:layout_toEndOf="@+id/list_image_2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black54"
            android:textSize="13sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>