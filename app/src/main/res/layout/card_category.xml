<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="0dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:actualImageScaleType="fitCenter"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black70"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/product_price"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black54"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/border_top_button"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black87"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/border_top_button"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/add_to_cart"
            android:background="#c0c0c0" />

        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_bg"
            android:text="@string/btn_add_to_cart"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>